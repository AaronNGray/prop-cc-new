SUFFIXES = .pcc .ph .pC

PROPWRAP = $(top_srcdir)/propwrap
PROPWRAP_ARGS = $(PROP) $(top_builddir)

PROPPP_FLAGS    = -I$(top_srcdir)/include
PROP_OPTS_BASIC	= -strict $(PROPPP_FLAGS) -report -v2
PROP_OPTS       = $(PROP_OPTS_BASIC) -O14 $(PROP_OPTS_LOCAL)

.ph.h:
@AMDEP_TRUE@	$(PROPWRAP) $(PROPWRAP_ARGS) -M $(PROP_OPTS) $< > $(DEPDIR)/`basename $*.Tpph`
@AMDEP_TRUE@	if test -s $(DEPDIR)/`basename $*.Tpph`; then $(am__mv) $(DEPDIR)/`basename $*.Tpph` $(DEPDIR)/`basename $*.Pph`; fi
	$(PROPWRAP) $(PROPWRAP_ARGS) $(PROP_OPTS) $<

.pcc.cc:
@AMDEP_TRUE@	$(PROPWRAP) $(PROPWRAP_ARGS) -M $(PROP_OPTS) $< > $(DEPDIR)/`basename $*.Tppo`
@AMDEP_TRUE@	if test -s $(DEPDIR)/`basename $*.Tppo`; then $(am__mv) $(DEPDIR)/`basename $*.Tppo` $(DEPDIR)/`basename $*.Ppo`; fi
	$(PROPWRAP) $(PROPWRAP_ARGS) $(PROP_OPTS) $<

.pC.C:
@AMDEP_TRUE@	$(PROPWRAP) $(PROPWRAP_ARGS) -M $(PROP_OPTS) $< > $(DEPDIR)/`basename $*.Tppo`
@AMDEP_TRUE@	if test -s $(DEPDIR)/`basename $*.Tppo`; then $(am__mv) $(DEPDIR)/`basename $*.Tppo` $(DEPDIR)/`basename $*.Ppo`; fi
	$(PROPWRAP) $(PROPWRAP_ARGS) $(PROP_OPTS) $<

